<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_playslides"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:layout_centerHorizontal="true">

    <ImageSwitcher
        android:id="@+id/current_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:inAnimation="@anim/fade_in"
        android:outAnimation="@anim/fade_out" />

    <LinearLayout
        android:id="@+id/overlay_panel"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#30000000"
        >
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_height="0dp"
            android:layout_weight=".15"
            android:layout_width="match_parent">
            <LinearLayout
                android:id="@+id/control_faux_actionbar_back"
                android:orientation="horizontal"
                android:layout_height="48dp"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/button_flash"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_back"
                    />
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_launcher"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:layout_alignParentRight="true"
                >
                <ImageButton
                    android:id="@+id/control_main_menu"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_flash"
                    android:src="@drawable/ic_three_dot" />
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".30"
            >
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight=".2" />
            <TextView
                android:id="@+id/slidetext_control"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_centerHorizontal="true"
                android:autoLink="web"
                android:visibility="invisible"
                android:focusable="false"
                android:clickable="false"
                android:linksClickable="true"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_edges"
                />
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight=".2" />
        </LinearLayout>
        <RelativeLayout
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight=".10">
            <ImageButton
                android:id="@+id/edit_prev_control"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_flash"
                android:visibility="invisible"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_plus" />
            <ImageButton
                android:id="@+id/edit_next_control"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_flash"
                android:visibility="invisible"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_plus" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="0dp"
            android:layout_weight=".45"
            android:layout_width="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:layout_above="@+id/panel_slidepositioncount">
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="0.3">
                    <ImageButton
                        android:id="@+id/control_previous_slide"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/button_flash"
                        android:visibility="invisible"
                        android:src="@drawable/ic_arrow_left" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="0.3">
                    <ImageButton
                        android:id="@+id/control_playback"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/button_flash"
                        android:visibility="invisible"
                        android:src="@drawable/ic_play" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="0.3">
                    <ImageButton
                        android:id="@+id/control_next_slide"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/button_flash"
                        android:visibility="invisible"
                        android:src="@drawable/ic_arrow_right" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/panel_slidepositioncount"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/control_slide_position"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:text="1 of 100"
                    android:textColor="#FFFFFF"
                    />
                <TextView
                    android:id="@+id/control_title"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:text="My slides"
                    android:textColor="#FFFFFF"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>